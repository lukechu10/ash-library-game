{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "lib": ["DOM", "ES2017", "WebWorker"],
        "resolveJsonModule": true,
        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "baseUrl": "./src/",
        "paths": {
            "$components/*": ["./components/*"],
            "$routes/*": ["./routes/*"],
            "$services/*": ["./services/*"],
            "$store/*": ["./store/*"]
        }
    },
    "include": ["src/**/*", "src/node_modules/**/*"],
    "exclude": ["node_modules/*", "__sapper__/*", "static/*"]
}
